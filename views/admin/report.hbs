<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
    async function forHome() {

        const totalAmount = []
        const totalDate = []

        $.ajax({
            url: '/admin/getData',
            method: 'post',
            success: (response) => {

                document.getElementById('totalOrder').innerHTML = response.orderCount
                document.getElementById('totalAmountPaid').innerHTML = 'Rs ' + response.totalArray

                console.log(response.brandArray)

                var ctx = document.getElementById('mychart').getContext('2d');
                const mychart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: response.dateArray,
                        datasets: [{
                            label: 'Earnings of this Week',
                            data: response.totalArray,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });


                {{!-- brand --}}
                var ctx = document.getElementById('brand').getContext('2d');
                const brand = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: response.brandArray,
                        datasets: [{
                            label: 'Sold Products Data',
                            backgroundColor: ['rgb(168,114,154)', 'rgb(95,183,255)', 'rgb(255,63,108)', 'rgb(255,159,32)', 'rgb(102,191,97)', 'rgb(167,215,197)'],
                            borderColor: ['rgb(168,114,154)', 'rgb(95,183,255)', 'rgb(255,63,108)', 'rgb(255,159,32)', 'rgb(102,191,97)', 'rgb(167,215,197)'],
                            data: response.sumArray,
                        }]
                    },
                    options: {
                        scales: {
                           tooltips: {
                            mode: 'index'
                        }
                        }
                    }
                });
            }
        })
    }

    forHome()

</script>

