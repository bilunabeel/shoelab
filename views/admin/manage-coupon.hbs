<div class="layout-page">
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">

            <nav style="margin: 0; width:100%"
                class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
                id="layout-navbar">


                <div class="navbar-nav align-items-center">
                    <div class="nav-item d-flex align-items-center">
                        <i class="bx bx-search fs-4 lh-0"></i>
                        <input type="text" id="myInput" onkeyup="searchTable()"
                            class="form-control border-0 shadow-none" placeholder="Search..." aria-label="Search..." />
                    </div>
                </div>
            </nav>



            <div class="d-flex">
                <h4 class="fw-bold py-3 mb-4">Manage Coupons</h4>

                <a type="button" href="/admin/add-coupon" class="btn btn-primary" style="margin: auto 0 auto auto;">Add
          Coupon</a>
            </div>

            <div class="card">
                <h5 class="card-header">Coupon Details</h5>
                <div class="table-responsive text-nowrap">
                    <table id="myTable" class="table">
                        <thead>
                            <tr>
                                <th>Coupon Name</th>
                                <th>Code</th>
                                <th>Discount</th>
                                <th>Stock</th>
                                <th>Expiring Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            {{#each allCoupons}}
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{this.couponName}}</strong></td>
                                <td>{{this.couponCode}}</td>
                                <td>{{this.discount}}%</td>
                                <td>{{this.limit}}</td>
                                <td>{{this.expirationTime}}</td>
                                <td><a  href="/admin/deleteCoupon/{{this._id}}" onclick="return confirm('Are you sure to delete this coupon?')"><i class="bx bx-trash me-1"></i></a></td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

